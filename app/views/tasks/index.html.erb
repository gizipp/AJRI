<h1>Task Assigned To You</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, work_todo_list_task_path(task.todo_list.work_id, task.todo_list_id, task.id) %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status ? "Unresolved" : "Done" %></td>
        <td><%= link_to 'Mark as Done', work_todo_list_task_path(task.todo_list.work_id, task.todo_list_id, task.id),{:method => :put, :status => true} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @tasks %>
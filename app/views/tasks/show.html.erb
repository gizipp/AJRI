<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @task.user_id %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<h2>Comments</h2>
<% @task.comments.each do |comment| %>
  <p>
    <strong><%= comment.id_user %>:</strong>
    <%= comment.body %>
  </p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>

<h2>Add a comment:</h2>
<%= form_for([@task, @task.comments.build]) do |f| %>
  <p>
    <%= f.label :id_user %><br>
    <%= f.text_field :id_user %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <div class="field">
    <%= f.file_field :attachment %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p id="notice"><%= notice %></p>

<h2>
  <%= @task.name %>
</h2>

<p>
  <%= @task.description %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Project:</strong>
  <%= link_to @work.title, work_path(@work.id) %>
</p>

<p>
  <strong>Todo List:</strong>
  <%= link_to @todo_list.name, work_todo_list_path(@work.id, @todo_list.id) %>
</p>

<p>
  <strong>Assigned to:</strong>
  <%= link_to @task.user.username, user_path(@task.user.id) %>
</p>

<h2>Discussion</h2>
<% @task.comments.each do |comment| %>
  <p>
    <strong><%= comment.user.username %>:</strong>
    <%= comment.body %>
  </p>
<% end %>

<%= form_for [@work, @todo_list, @task, @task.comments.build] do |f| %>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %> 
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'button right' %> 
  </div>
<% end %>